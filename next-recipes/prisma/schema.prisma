generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id           Int                    @id @default(autoincrement())
  name         String
  slug         String                 @unique
  image        String?
  summary      String?
  url          String?
  video        String?
  prepTime     String
  cookTime     String
  totalTime    String?
  yields       Int
  serves       String?
  tags         Tag[]
  courses      Course[]
  authorId     Int?
  instructions String[]
  author       Author?                @relation(fields: [authorId], references: [id])
  ingredients  IngredientsOnRecipes[]

  @@unique([name, authorId])
}

model Author {
  id      Int      @id @default(autoincrement())
  name    String
  website String   @unique
  recipe  Recipe[]
}

model Tag {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  recipe Recipe[]
}

model Course {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  recipe Recipe[]
}

model Ingredient {
  id       Int                    @id @default(autoincrement())
  name     String                 @unique
  variants String[]
  recipes  IngredientsOnRecipes[]

  @@unique([name, id])
}

model IngredientsOnRecipes {
  ingredient   Ingredient @relation(fields: [name, ingredientId], references: [name, id])
  ingredientId Int
  name         String
  recipe       Recipe     @relation(fields: [recipeId], references: [id])
  recipeId     Int
  quantity     Float?
  unit         UnitName?
  note         String?
  group        String
  original     String

  @@id([recipeId, name])
}

enum UnitType {
  MASS
  VOL
}

enum UnitName {
  CUP
  TBSP
  TSP
  STICK
  G
  ML
  L
  OZ
  LB
  PINT
  GAL
  UNIT
  SMALL
  LARGE
  PINCH
  TO_TASTE
  CLOVES
}
